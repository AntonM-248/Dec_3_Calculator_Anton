<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:id="@+id/main">

    <TextView
        android:id="@+id/inputBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:text="" />

    <Button
        android:id="@+id/acButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="@string/ac" />

<!--    <Button-->
<!--        android:id="@+id/plusMinusButton"-->
<!--        android:layout_width="95dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/inputBox"-->
<!--        android:layout_toEndOf="@id/acButton"-->
<!--        android:layout_marginTop="55dp"-->
<!--        android:layout_marginHorizontal="5dp"-->
<!--        android:text="@string/plus_minus" />-->
    <Button
        android:id="@+id/percentButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputBox"
        android:layout_toEndOf="@id/acButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="@string/percent" />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="95dp"
        android:layout_below="@+id/inputBox"
        android:layout_toEndOf="@id/percentButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="/" />
    <Button
        android:id="@+id/sevenButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="7" />

    <Button
        android:id="@+id/eightButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acButton"
        android:layout_toEndOf="@id/sevenButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="8" />
    <Button
        android:id="@+id/nineButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percentButton"
        android:layout_toEndOf="@id/eightButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="9" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="95dp"
        android:layout_below="@+id/divideButton"
        android:layout_toEndOf="@id/nineButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="x" />
    <Button
        android:id="@+id/fourButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sevenButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="4" />

    <Button
        android:id="@+id/fiveButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eightButton"
        android:layout_toEndOf="@id/fourButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="5" />
    <Button
        android:id="@+id/sixButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nineButton"
        android:layout_toEndOf="@id/fiveButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="6" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="95dp"
        android:layout_below="@+id/multiplyButton"
        android:layout_toEndOf="@id/sixButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="-" />
    <Button
        android:id="@+id/oneButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="1" />

    <Button
        android:id="@+id/twoButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fiveButton"
        android:layout_toEndOf="@id/oneButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="2" />
    <Button
        android:id="@+id/threeButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sixButton"
        android:layout_toEndOf="@id/twoButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="3" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="95dp"
        android:layout_below="@+id/minusButton"
        android:layout_toEndOf="@id/threeButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="+" />
    <Button
        android:id="@+id/zeroButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oneButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="@string/_0" />

    <Button
        android:id="@+id/decimalButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/threeButton"
        android:layout_toEndOf="@id/zeroButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="." />
    <Button
        android:id="@+id/equalsButton"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plusButton"
        android:layout_toEndOf="@id/decimalButton"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="5dp"
        android:text="=" />
</RelativeLayout>